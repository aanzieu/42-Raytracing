<!ELEMENT scene (camera|light|ambient|sphere|plane|cylinder|disk|cone|paraboloid|hyperboloid|torus|mobius|triangle|cube)*>
<!ELEMENT camera (pos, dir, rot*, tra*)>
<!ELEMENT light (pos, dir*, color*, intensity)>
<!ELEMENT ambient (color, intensity)>
<!ELEMENT plane (origin, normal, rot*, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT sphere (pos, radius, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT cylinder (pos, normal, radius, height, rot*, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT disk (origin, normal, radius, rot*, tra*, color, chess*, reflection*, refraction, transparence*)>
<!ELEMENT cone (pos, normal, radius, height, min*, max*, rot*, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT paraboloid (top, normal, radius, height, rot*, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT hyperboloid (top, normal, radius, height, rot*, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT torus (top, normal, radius_small, radius_big, rot*, tra*, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT mobius (pos, radius, tra*, color, reflection*)>
<!ELEMENT triangle (pos, normal, v1, v2, color, chess*, reflection*, refraction*, transparence*)>
<!ELEMENT cube (pos, normal, size, color, chess*, reflection*, refraction*, transparence*)>


<!ELEMENT pos (#PCDATA)>
<!ELEMENT dir (#PCDATA)>
<!ELEMENT rot (#PCDATA)>
<!ELEMENT tra (#PCDATA)>
<!ELEMENT top (#PCDATA)>
<!ELEMENT min (#PCDATA)>
<!ELEMENT max (#PCDATA)>
<!ELEMENT v1 (#PCDATA)>
<!ELEMENT v2 (#PCDATA)>
<!ELEMENT height (#PCDATA)>
<!ELEMENT size (#PCDATA)>
<!ELEMENT origin (#PCDATA)>
<!ELEMENT normal (#PCDATA)>
<!ELEMENT radius (#PCDATA)>
<!ELEMENT radius_small (#PCDATA)>
<!ELEMENT radius_big (#PCDATA)>
<!ELEMENT color (#PCDATA)>
<!ELEMENT chess (#PCDATA)>
<!ELEMENT intensity (#PCDATA)>
<!ELEMENT reflection (#PCDATA)>
<!ELEMENT refraction (#PCDATA)>
<!ELEMENT transparence (#PCDATA)>

