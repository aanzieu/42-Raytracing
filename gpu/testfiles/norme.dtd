<!ELEMENT scene (camera|light|ambient|sphere|plane|cylinder|disk|cone|paraboloid|hyperboloid|torus)*>
<!ELEMENT camera (pos, dir, rot*, tra*)>
<!ELEMENT light (pos, dir*, color*, intensity)>
<!ELEMENT ambient (color, intensity)>
<!ELEMENT plane (origin, normal, tra*, rot*, color, chess*, reflection*, refraction*)>
<!ELEMENT sphere (pos, tra*, radius, color, chess*, reflection*, refraction*)>
<!ELEMENT cylinder (pos, normal, radius, rot*, color, chess*, reflection*, refraction*)>
<!ELEMENT disk (origin, normal, radius, rot*, color, chess*, reflection*, refraction*)>
<!ELEMENT cone (pos, normal, radius, height, min*, max*, rot*, color, chess*, reflection*, refraction*)>
<!ELEMENT paraboloid (top, normal, radius, height, rot*, color, chess*, reflection*, refraction*)>
<!ELEMENT hyperboloid (top, normal, radius, height, rot*, color, chess*, reflection*, refraction*)>
<!ELEMENT torus (pos, radius_small, radius_big, rot*, color, chess*, reflection*, refraction*)>


<!ELEMENT pos (#PCDATA)>
<!ELEMENT dir (#PCDATA)>
<!ELEMENT rot (#PCDATA)>
<!ELEMENT tra (#PCDATA)>
<!ELEMENT top (#PCDATA)>
<!ELEMENT min (#PCDATA)>
<!ELEMENT max (#PCDATA)>
<!ELEMENT height (#PCDATA)>
<!ELEMENT origin (#PCDATA)>
<!ELEMENT normal (#PCDATA)>
<!ELEMENT radius (#PCDATA)>
<!ELEMENT radius_small (#PCDATA)>
<!ELEMENT radius_big (#PCDATA)>
<!ELEMENT color (#PCDATA)>
<!ELEMENT chess (#PCDATA)>
<!ELEMENT intensity (#PCDATA)>
<!ELEMENT reflection (#PCDATA)>
<!ELEMENT refraction (#PCDATA)>


